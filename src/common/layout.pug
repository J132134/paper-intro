doctype html
html(lang='ko')
  head
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title RIDIBOOKS PAPER - 리디북스 페이퍼
    meta(charset='utf-8')
    meta(name='theme-color', content='#171717')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0')
    meta(name='ROBOTS', content='ALL')
    meta(name='author', content='RIDI Corporation')
    meta(name='format-detection', content='telephone=no')
    block meta

    link(rel='apple-touch-icon', sizes='180x180', href='/favicon/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='/favicon/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='/favicon/favicon-16x16.png')
    link(rel='manifest', href='/favicon/manifest.webmanifest')
    link(rel='mask-icon', href='/favicon/safari-pinned-tab.svg', color='#1672d6')
    link(rel='shortcut icon', href='/favicon/favicon.ico')

    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Noto+Sans+KR&display=swap')
    link(rel='stylesheet', href='/common/styles/layout.less')
    block styles

    script(src='/common/jquery_global.js')
  body
    #shop_header
      .header_wrapper
        header.header_top
          include /intro/ridipaper_logo.pug
          span.hidden RIDIPAPER
        nav.header_bottom
          block page_var
            - var page = '';
          a.nav_item(href='/')
            div(class={active: page === 'ridipaper'}) RIDIPAPER
          a.nav_item(href='/intro.pug')
            div(class={active: page === 'paper-pro'}) PAPER PRO
    #ridi_shop
      section#shop_contents
        block contents
      hr
      include /common/footer.pug
    block scripts
    script(src='/tracking/index.js')
    noscript
      iframe(src='https://www.googletagmanager.com/ns.html?id=GTM-5KJCZ3Q', width='0', height='0', style='display: none; visibility: hidden;')
